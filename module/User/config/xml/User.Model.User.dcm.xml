<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
                  
    <entity name="User\Model\User" table="user">
	
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="identity" type="string" unique="true" length="255" nullable="true"/>
        <field name="displayName" column="display_name" type="string" length="50" nullable="true" />
        <field name="password" type="string" length="128" />
        <field name="state" type="smallint" nullable="true" />
        <field name="token" type="string" length="255" nullable="true" />
        <field name="firstname" type="string" length="255" />
        <field name="lastname" type="string" length="255" />
        <field name="streetAndNr" type="string" length="255" />
        <field name="postalCode" type="string" length="5" />
        <field name="city" type="string" length="255" />
        <field name="phone" type="string" length="10" />
        <field name="avatar" type="string" length="255" nullable="true" />
        <many-to-many field="roles" target-entity="User\Model\Role" />
		
    </entity>

</doctrine-mapping>