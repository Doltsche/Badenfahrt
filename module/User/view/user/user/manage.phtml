<h1>Benutzer verwalten</h1>

<table class="table">
    <tr>
        <th>Anzeigename</th>
        <th>Vorname</th>
        <th>Nachname</th>
        <th>Identität</th>
        <th>&nbsp;</th>
    </tr>

    <?php foreach ($this->users as $user) : ?>

        <tr>
            <td><?php echo $this->escapeHtml($user->getDisplayName()); ?></td>
            <?php if ($user->getPersonal()): ?>
                <td><?php echo $this->escapeHtml($user->getPersonal()->getFirstname()); ?></td>
                <td><?php echo $this->escapeHtml($user->getPersonal()->getLastname()); ?></td>
            <?php else: ?>
                <td>-</td>
                <td>-</td>
            <?php endif; ?>
            <td><?php echo $this->escapeHtml($user->getIdentity()); ?></td>
            <td>
                <a href="<?php echo $this->url('user/manage/edit', array('id' => $user->getId())); ?>">Bearbeiten</a>
                <a href="<?php echo $this->url('user/manage/delete', array('id' => $user->getId())); ?>">Löschen</a>
            </td>
        </tr>

    <?php endforeach; ?>

</table>